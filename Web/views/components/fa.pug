mixin fa-template(style, altText)
    | &nbsp;
    if altText
        i(aria-hidden title=altText)&attributes(attributes)
        span.sr-only= altText
    else
        i(aria-hidden)&attributes(attributes)
    | &nbsp;
    block

mixin fas(altText)
    +fa-template(altText).fas&attributes(attributes)

mixin fab(altText)
    +fa-template(altText).fab&attributes(attributes)

mixin far(altText)
    +fa-template(altText).far&attributes(attributes)
